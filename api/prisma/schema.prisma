generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

enum LeagueRole {
  ADMIN
  MEMBER
}

model User {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  displayName String?
  authToken   String   @unique

  memberships LeagueMember[]
  teams       Team[]
}

model League {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name      String
  joinCode  String   @unique

  members   LeagueMember[]
  teams     Team[]
}

model LeagueMember {
  id        String     @id @default(cuid())
  createdAt DateTime   @default(now())

  userId    String
  leagueId  String
  role      LeagueRole @default(MEMBER)

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  league    League     @relation(fields: [leagueId], references: [id], onDelete: Cascade)

  @@unique([userId, leagueId])
  @@index([leagueId])
  @@index([userId])
}

model Driver {
  id            String   @id
  name          String
  constructorId String
  price         Float
  points        Int      @default(0)
  
  teams         TeamDriver[]
}

model Team {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  leagueId  String
  userId    String

  budget    Float
  captainId String?
  reserveId String?

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  league    League   @relation(fields: [leagueId], references: [id], onDelete: Cascade)

  drivers   TeamDriver[]

  @@unique([leagueId, userId])
  @@index([leagueId])
  @@index([userId])
}

model TeamDriver {
  id       String @id @default(cuid())
  teamId   String
  driverId String

  team     Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)
  driver   Driver @relation(fields: [driverId], references: [id], onDelete: Cascade)

  @@unique([teamId, driverId])
  @@index([teamId])
  @@index([driverId])
}

model Race {
  id        String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name      String
  country   String?
  city      String?

  season    Int
  round     Int

  isSprint  Boolean  @default(false)

  qualifyingUtc       DateTime?
  sprintQualifyingUtc DateTime?

  // --- NUOVI CAMPI AGGIUNTI ---
  date                DateTime
  isCompleted         Boolean  @default(false)
}
