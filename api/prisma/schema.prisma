generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


enum LeagueRole {
  ADMIN
  MEMBER
}

model User {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  displayName String?
  password    String?  // Hashed password
  authToken   String   @unique

  memberships LeagueMember[]
  teams       Team[]
}

model League {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name      String
  joinCode  String   @unique
  rules     Json?

  members   LeagueMember[]
  teams     Team[]
}

model LeagueMember {
  id        String     @id @default(cuid())
  createdAt DateTime   @default(now())

  userId    String
  leagueId  String
  role      LeagueRole @default(MEMBER)

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  league    League     @relation(fields: [leagueId], references: [id], onDelete: Cascade)

  @@unique([userId, leagueId])
  @@index([leagueId])
  @@index([userId])
}

model Driver {
  id            String   @id
  name          String
  constructorId String
  price         Float
  points        Int      @default(0)
  
  teams         TeamDriver[]
  teamResultDrivers TeamResultDriver[]
}

model Team {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  leagueId  String
  userId    String

  budget    Float
  totalPoints Float @default(0)
  captainId String?
  reserveId String?

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  league    League   @relation(fields: [leagueId], references: [id], onDelete: Cascade)

  drivers   TeamDriver[]
  results   TeamResult[]

  @@unique([leagueId, userId])
  @@index([leagueId])
  @@index([userId])
}

model TeamDriver {
  id       String @id @default(cuid())
  teamId   String
  driverId String

  team     Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)
  driver   Driver @relation(fields: [driverId], references: [id], onDelete: Cascade)

  @@unique([teamId, driverId])
  @@index([teamId])
  @@index([driverId])
}

model Race {
  id        String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name      String
  country   String?
  city      String?

  season    Int
  round     Int

  isSprint  Boolean  @default(false)

  qualifyingUtc       DateTime?
  sprintQualifyingUtc DateTime?

  // --- NUOVI CAMPI AGGIUNTI ---
  date                DateTime
  isCompleted         Boolean  @default(false)
  results             Json?

  teamResults         TeamResult[]
}

model TeamResult {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  raceId    String
  teamId    String
  
  points    Float    @default(0)
  captainId String?
  reserveId String?

  race      Race     @relation(fields: [raceId], references: [id], onDelete: Cascade)
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  
  drivers   TeamResultDriver[]

  @@unique([raceId, teamId])
  @@index([raceId])
  @@index([teamId])
}

model TeamResultDriver {
  id           String @id @default(cuid())
  teamResultId String
  driverId     String
  points       Int    @default(0)

  teamResult   TeamResult @relation(fields: [teamResultId], references: [id], onDelete: Cascade)
  driver       Driver     @relation(fields: [driverId], references: [id], onDelete: Cascade)

  @@unique([teamResultId, driverId])
  @@index([teamResultId])
  @@index([driverId])
}
